{
  "name": "pdfkit",
  "version": "1.0.0",
  "description": "PDFtool Ã¨ un'app desktop per la gestione dei PDF: unione, divisione, filigrana, riassunto AI e altro.",
  "main": "./out/main/index.js",
  "author": "Gianluca Tondo <tondo.gianlu@gmail.com>",
  "homepage": "https://github.com/gianlu15/PDFtool",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "preview:build": "npm run build && electron ./out/main/index.js"
  },
  "build": {
    "appId": "com.pdfkit.desktop",
    "productName": "PDFkit",
    "files": [
      "dist",
      "out",
      "resources",
      "node_modules",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "resources/logo.icns"
    },
    "win": {
      "target": ["nsis"],
      "icon": "resources/logo.ico"
    },
    "linux": {
      "target": ["AppImage"],
      "icon": "resources/logo.png"
    }
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^4.0.0",
    "axios": "^1.9.0",
    "dotenv": "^16.5.0",
    "framer-motion": "^12.11.3",
    "pdf-lib": "^1.17.1",
    "pdfjs-dist": "^5.2.133"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config": "^2.0.0",
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "^35.1.5",
    "electron-builder": "^25.1.8",
    "electron-vite": "^3.1.0",
    "eslint": "^9.24.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "vite": "^6.2.6"
  }
}